    <pattern>QUANTE ZAMPE ^ <set>animal</set> #</pattern>
    <template><srai>LEGS <star index="2"/></srai></template>
</category>
<category>
    <pattern>QUANTE ZAMPE ^ <set>animals</set> #</pattern>
    <template><srai>LEGS <srai>SINGULAR <star index="2"/></srai></srai></template>
</category>
<category>
    <template>
        <think>
            <set var="number1"><star index="2"/></set>
            <set var="animal1"><srai>SINGULAR <star index="3"/></srai></set>
            <set var="legs1">       
                <uniq>
                    <subj><get var="animal1"/></subj>
                    <pred>legs</pred>
                    <obj>?legs1</obj>
                </uniq>
            </set>
            <set var="number2"><star index="5"/></set>
            <set var="animal2"><srai>SINGULAR <star index="6"/></srai></set>
            <set var="legs2">
                <uniq>
                    <subj><get var="animal2"/></subj>
                    <pred>legs</pred>
                    <obj>?legs2</obj>
                </uniq>
            </set>
            <set var="formula"><get var="number1"/>*<get var="legs1"/>+<get var="number2"/>*<get var="legs2"/></set>
        </think>
        <srai>ROUND <srai>WHAT IS <get var="formula"/></srai></srai> legs.
    </template>
</category>
<category>
    <pattern>ZAMPE # <set>number</set> <set>animals</set> ^</pattern>
    <template>
        <think>
            <set var="number1"><star index="2"/></set>
            <set var="animal1"><srai>SINGULAR <star index="3"/></srai></set>
            <set var="legs1">
                <uniq>
                    <subj><get var="animal1"/></subj>
                    <pred>legs</pred>
                    <obj>?legs1</obj>
                </uniq>
            </set>
            <set var="formula"><get var="number1"/>*<get var="legs1"/></set>
        </think>
        <srai>ROUND <srai>WHAT IS <get var="formula"/></srai></srai> legs.
    </template>
</category>
<category>
    <pattern>_ 1 <set>animal</set> *</pattern>
    <template><srai><star/> 1 <srai>PLURAL <star index="2"/></srai> <star index="3"/></srai></template>
</category>
<category>
    <pattern>_ 1 <set>animal</set></pattern>
    <template><srai><star/> 1 <srai>PLURAL <star index="2"/></srai></srai></template>
</category>
</aiml>
