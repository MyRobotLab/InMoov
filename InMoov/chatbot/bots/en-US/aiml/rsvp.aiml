  <category>
    <pattern>SEND RSVP TO *</pattern>
    <template>
    	I'm sending an RSVP to <star />.
		<think>
			<addtriple>
				<subj><star /></subj>
				<pred>has</pred>
				<obj>RSVP</obj>
			</addtriple>
			<addtriple>
				<subj><star /></subj>
				<pred>status</pred>
				<obj>not responded</obj>
			</addtriple>
		</think>
	</template>
  </category>
  <category>
    <pattern>WHO HAS AN RSVP</pattern>
    <template>
      <think>
        <set var="tuples">
          <select>
            <vars>?x</vars>
            <q>
              <subj>?x</subj>
              <pred>has</pred>
              <obj>RSVP</obj>
            </q>
          </select>
        </set>
      </think>
      <condition var="tuples">
        <li value="NIL" />
        <li>
          <get var="?x">
            <tuple>
              <first>
                <get var="tuples" />
              </first>
            </tuple>
          </get>,
  		  <think>
  			<set var="tuples">
  				<rest><get var="tuples" /></rest>
  			</set>
  		  </think>
  		  <loop />
  		</li>
      </condition>
    </template>
  </category>
  <category>
    <pattern>RSVP STATUS</pattern>
    <template>
      <think>
        <set var="tuples">
          <select>
            <vars>?x ?status</vars>
            <q>
              <subj>?x</subj>
              <pred>status</pred>
              <obj>?status</obj>
            </q>
          </select>
        </set>
      </think>
      <condition var="tuples">
        <li value="NIL" />
        <li>
          <get var="?x">
            <tuple>
              <first>
                <get var="tuples" />
              </first>
            </tuple>
          </get> -- <get var="?status"><tuple><first><get var="tuples" /></first></tuple></get><think><set var="tuples"><rest><get var="tuples" /></rest></set></think><loop /></li>
      </condition>
    </template>
  </category>
  <category>
    <pattern>name IS ATTENDING</pattern>
    <template>
    	Setting <star />'s RSVP status to "attending".
		<think>
			<deletetriple>
				<subj><star /></subj>
				<pred>status</pred>
				<obj>not responded</obj>
			</deletetriple>
			<addtriple>
				<subj><star /></subj>
				<pred>status</pred>
				<obj>attending</obj>
			</addtriple>
		</think>
	</template>
  </category>
  <category>
    <pattern>name IS NOT ATTENDING</pattern>
    <template>
    	Setting <star />'s RSVP status to "not attending".
		<think>
			<deletetriple>
				<subj> <star /></subj>
				<pred>status</pred>
				<obj>not responded</obj>
			</deletetriple>
			<addtriple>
				<subj><star /></subj>
				<pred>status</pred>
				<obj>not attending</obj>
			</addtriple>
		</think>
	</template>
  </category>
</aiml>