  <!-- weather -->
  
  <!-- default town -->
   <category>
    <pattern># forecast</pattern>
    <template>
      <oob>
        <mrl>
          <service>python</service>
          <method>exec</method>
          <param>isTheSunShiny()</param>
        </mrl>
      </oob>
    </template>
  </category>
  
   <category>
    <pattern>what is the forecast</pattern>
    <template>
     <srai># forecast</srai>
    </template>
  </category>
  
  <category>
    <pattern># forecast # $tomorrow</pattern>
    <template>
      <oob>
        <mrl>
          <service>python</service>
          <method>exec</method>
          <param>isTheSunShiny(town,8)</param>
        </mrl>
      </oob>
    </template>
  </category>
  
  <category>
    <pattern># forecast # IN * $DAYS</pattern>
    <template>
        <think><set name="nbdays"><map name="name2number"><star index="3" /></map></set></think>
        <condition>
            <li name="nbdays" value="unknown"><think><set name="nbdays"><star index="3" /></set></think></li>
        </condition>
       <oob>
        <mrl>
          <service>python</service>
          <method>exec</method>
          <param>isTheSunShiny(town,<javascript>
period = eval( <get name="nbdays" /> * 8 );
period;
</javascript>)</param>
        </mrl>
      </oob>
    </template>
  </category>
  
    <category>
    <pattern># forecast $IN * $IN * $DAYS</pattern>
    <template>
        <think><set name="nbdays"><map name="name2number"><star index="3" /></map></set></think>
        <condition>
            <li name="nbdays" value="unknown"><think><set name="nbdays"><star index="3" /></set></think></li>
        </condition>
       <oob>
        <mrl>
          <service>python</service>
          <method>exec</method>
          <param>isTheSunShiny("<star index="2" />",<javascript>
period = eval( <get name="nbdays" /> * 8 );
period;
</javascript>)</param>
        </mrl>
      </oob>
    </template>
  </category>
  
  <!-- free town -->
 <category>
    <pattern># forecast $in *</pattern>
    <template>
      <oob>
        <mrl>
          <service>python</service>
          <method>exec</method>
          <param>isTheSunShiny("<star index="2"/>")</param>
        </mrl>
      </oob>
    </template>
  </category>
  

